<div class="session-form-container">
  <h2 class="session-heading">
    ご登録された方は、メールアドレスとパスワードを入力して<br />
    ご自身のページを開いてください
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", placeholder: "xxxx@docomo.ne.jp", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "パスワードを入力" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "マイページに入る", class: "btn btn-success w-100" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>
</div>
