<div class="border-bottom mt-4">
  <div class="container">
    <div class="w-50 mx-auto title-responsive-sm">
      <h3 class="follow-title mb-4"><%= "#{@member.name}を応援している人" %></h3>
    </div>
  </div>
</div> 

<div class="container mt-2">
  <div class="w-50 mx-auto content-responsive-sm">
    <div class="list-group">
      <% @followers.each do |member| %>
        <div class="d-flex align-items-center border-bottom py-3">
          <%= link_to member_path(member), class: "text-decoration-none link-dark" do %>  
            <%= image_tag member.get_profile_image(40,40), class: "rounded-circle me-2" %>
            <span><%= member.name %></span>
          <% end %> 
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-4">
      <%= paginate @followers, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>