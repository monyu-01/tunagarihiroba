<h1>投稿を書く</h1>
<% if @post.errors.any? %>
  <p class="error-header">入力内容に不備があるようです。</p>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="post-new-container">
  <%= form_with model: @post do |f| %>
    <h4>投稿画像（任意）</h4>
    <%= f.file_field :image, accept: "image/*" %>
    <h4>タイトル</h4>
    <%= f.text_field :title, placeholder:"タイトル名" %>
    <h4>投稿内容</h4>
    <%= f.text_area :body, rows: 10, placeholder:"投稿には、年代や病気の分類などを記載いただくと、同じ境遇の方にとってより参考になります。" %><br/>
    <%= f.submit "投稿"%>
  <% end %>
</div>


      


