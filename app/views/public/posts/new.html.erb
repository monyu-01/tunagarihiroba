<nav class="navbar border-bottom mt-4">
  <div class="container">
    <div class="navbar-header mb-4">
      <h2>投稿を書く</h2>
    </div>
  </div>
</nav>  

<div class="containar mt-5 px-3 px-md-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <%= render 'layouts/form_error_messages', object: @post %>
      <div class="post-new-container">
        <%= form_with model: @post do |f| %>
          <h4 class="mb-3">投稿画像（任意）</h4>
          <%= f.file_field :image, accept: "image/*" %>
          <h4 class="mb-3 mt-4">タイトル</h4>
          <%= f.text_field :title, placeholder:"タイトル名", class: "form-control form-control-lg" %>
          <h4 class="mb-3 mt-4">投稿内容</h4>
          <%= f.text_area :body, rows: 10, placeholder:"投稿には、年代や病気の分類などを記載いただくと、同じ境遇の方にとってより参考になります。", class: "form-control form-control-lg" %><br/>
          <%= f.submit "投稿", class: "btn btn-success d-grid gap-2 col-2 mx-auto btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
