<div class="container w-75 mt-4 mb-4">
  <h2 class="mb-4">通報詳細</h2>

  <table class="table table-bordered">
    <thead>
      <tr class="table-success text-center">
        <th class="w-25">項目名</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>通報ID</th>
        <td><%= @report.id %></td>
      </tr>
      <tr>
        <th>通報された者</th>
        <td><%= @report.reported.name %></td>
      </tr>
      <tr>
        <th>理由</th>
        <td><%= @report.reason %></td>
      </tr>
      <tr>
        <th>通報者</th>
        <td><%= @report.reporter.name %></td>
      </tr>
      <tr>
        <th>対応ステータス</th>
        <td>
          <%= form_with model: @report, url: admin_report_path(@report), method: :patch do |f| %>
            <div class="d-flex gap-3 align-items-center">
              <%= f.select :checked, [["未対応", false], ["対応済み", true]], {}, class: "form-select" %>
              <%= f.submit "更新", class: "btn btn-success" %>
            </div>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>